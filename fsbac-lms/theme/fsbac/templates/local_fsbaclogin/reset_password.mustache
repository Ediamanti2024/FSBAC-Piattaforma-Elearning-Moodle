{{{form}}}

<div class='fsbac-login-fixed'>

    <div class='fsbac-login-section-form' style='flex:1'>
        {{< theme_fsbac/local_fsbaclogin/container}}
           {{$lang}}{{{languagemenu}}}{{/lang}}
           {{$container}}
            <div class='fsbac-form-wrapper'>
                <p class='fsbac-login-info text-center'>{{#str}}login.reset_password_msg, theme_fsbac{{/str}}</p>
                <h1 class='fsbac-login-title text-center'>{{#str}}login.reset_password, theme_fsbac{{/str}}</h1>
                <div class="fsbac-reset_password">
                    <p class="fsbac-reset_password_info">{{#str}}login.reset_password_info, theme_fsbac{{/str}}</p>
                  {{{form}}}
                </div>
                
                <button class="btn btn-primary btn-lg w-100 buttonSubmitSign" type="submit" id="loginbtn">{{#str}}login.reset_password_button, theme_fsbac{{/str}}</button>
            
        
            </div>
           {{/container}}
        {{/theme_fsbac/local_fsbaclogin/container}}
    </div>
    


</div>

{{#js}}
require(
[
    'jquery',
],
function(
    $,

) {
    $('.buttonSubmitSign').on('click',()=>{
        $('#fgroup_id_buttonar #id_submitbutton').click();
    })
});
{{/js}}
   

